print("GUI created successfully")

-- ENHANCED LOCATION DETECTION FUNCTION
local function detectCurrentLocation()
    -- METHOD 1: Check for specific workspace objects
    -- CUSTOMIZE THESE based on your game's actual structure!
    
    -- Check for Plaza/Trade World indicators
    if Workspace:FindFirstChild("Plaza") then
        return "Plaza"
    end
    
    if Workspace:FindFirstChild("TradeWorld") then
        return "Plaza"
    end
    
    -- Check for Garden/Main World indicators
    if Workspace:FindFirstChild("Garden") then
        return "Garden"
    end
    
    if Workspace:FindFirstChild("MainWorld") then
        return "Garden"
    end
    
    if Workspace:FindFirstChild("Map") then
        return "Garden"
    end
    
    -- METHOD 2: Check player position (if worlds are at different heights)
    if character and character.PrimaryPart then
        local yPos = character.PrimaryPart.Position.Y
        
        -- Adjust these values based on your game!
        -- Example: Plaza might be at Y > 500, Garden at Y < 500
        if yPos > 500 then
            return "Plaza"
        else
            return "Garden"
        end
    end
    
    -- METHOD 3: Check for NPCs or unique objects
    for _, obj in pairs(Workspace:GetDescendants()) do
        local name = obj.Name:lower()
        
        -- Plaza indicators
        if name:find("trader") or name:find("tradeshop") or name:find("plaza") then
            return "Plaza"
        end
        
        -- Garden indicators  
        if name:find("plant") or name:find("farm") or name:find("garden") then
            return "Garden"
        end
    end
    
    -- Default: assume Garden
    return "Garden"
end

-- Function to continuously update location
local function updateLocation()
    local newLocation = detectCurrentLocation()
    if newLocation ~= currentLocation then
        print("üîÑ Location changed:", currentLocation, "‚Üí", newLocation)
        currentLocation = newLocation
        updateGui()
    end
end

-- INVENTORY FUNCTIONS
local function getInventoryCount()
    local itemCount = 0
    if backpack then
        for _, item in pairs(backpack:GetChildren()) do
            -- Count items with "KG" or "kg" in name
            if item.Name:find("KG") or item.Name:find("kg") then
                itemCount = itemCount + 1
            end
        end
    end
    return itemCount
end

local function isInventoryFull()
    return getInventoryCount() >= MAX_INVENTORY_SIZE
end

-- UPDATE GUI FUNCTION
local function updateGui()
    local currentCount = getInventoryCount()
    statusLabel.Text = "Inventory: " .. currentCount .. "/" .. MAX_INVENTORY_SIZE
    
    -- Update location display
    if currentLocation == "Plaza" then
        locationLabel.Text = "üìç Location: Plaza (Trade World)"
        locationLabel.TextColor3 = Color3.fromRGB(100, 150, 255)
    elseif currentLocation == "Garden" then
        locationLabel.Text = "üìç Location: Garden (Main World)"
        locationLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        locationLabel.Text = "üìç Location: " .. currentLocation
        locationLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
    end
    
    -- Update inventory status
    if isInventoryFull() then
        statusLabel.TextColor3 = Color3.fromRGB(255, 85, 85)
        if currentLocation ~= "Plaza" then
            teleportButton.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
            teleportButton.Text = "INVENTORY FULL - GO TO PLAZA!"
        else
            teleportButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
            teleportButton.Text = "Already in Plaza"
        end
    else
        statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        if currentLocation ~= "Plaza" then
            teleportButton.BackgroundColor3 = Color3.fromRGB(50, 150, 255)
            teleportButton.Text = "Teleport to Plaza"
        else
            teleportButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
            teleportButton.Text = "Already in Plaza"
        end
    end
    
    -- Update return button based on location
    if currentLocation == "Garden" then
        returnButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
        returnButton.Text = "Already in Garden"
    else
        returnButton.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
        returnButton.Text = "Return to Garden"
    end
    
    -- Update auto-status
    if currentLocation == "Garden" then
        if currentCount >= MAX_INVENTORY_SIZE and not hasAutoTeleportedToPlaza then
            autoStatusLabel.Text = "‚öôÔ∏è Auto: Ready to go to Plaza (1x)"
            autoStatusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
        elseif currentCount >= MAX_INVENTORY_SIZE and hasAutoTeleportedToPlaza then
            autoStatusLabel.Text = "‚öôÔ∏è Auto: Used (manual teleport only)"
            autoStatusLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
        else
            autoStatusLabel.Text = "‚öôÔ∏è Auto: Farming... (" .. currentCount .. "/" .. MAX_INVENTORY_SIZE .. ")"
            autoStatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        end
    elseif currentLocation == "Plaza" then
        if currentCount <= RETURN_THRESHOLD and not hasAutoTeleportedFromPlaza then
            autoStatusLabel.Text = "‚öôÔ∏è Auto: Ready to return to Garden (1x)"
            autoStatusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
        elseif currentCount <= RETURN_THRESHOLD and hasAutoTeleportedFromPlaza then
            autoStatusLabel.Text = "‚öôÔ∏è Auto: Used (manual teleport only)"
            autoStatusLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
        else
            autoStatusLabel.Text = "‚öôÔ∏è Auto: Trading... (" .. currentCount .. " > " .. RETURN_THRESHOLD .. ")"
            autoStatusLabel.TextColor3 = Color3.fromRGB(100, 200, 255)
        end
    end
end

-- TELEPORT FUNCTIONS
local function teleportToPlaza()
    -- ‚úÖ ENHANCED: Check if already in Plaza before attempting teleport
    if currentLocation == "Plaza" then
        print("‚ÑπÔ∏è Already in Plaza - skipping teleport")
        teleportButton.Text = "Already in Plaza"
        teleportButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
        task.wait(1.5)
        updateGui()
        return
    end
    
    if joinInProgress then
        print("‚è≥ Teleport already in progress")
        return
    end
    
    if not plazaRemote then
        warn("‚ùå Plaza remote not found!")
        return
    end
    
    joinInProgress = true
    teleportButton.Text = "Teleporting to Plaza..."
    teleportButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
    
    local success, err = pcall(function()
        plazaRemote:FireServer()
    end)
    
    if success then
        print("‚úÖ Teleport request sent to Plaza!")
        print("üîÑ Server will restart - script will reload automatically")
    else
        warn("‚ùå Teleport error:", err)
        task.wait(2)
        joinInProgress = false
        updateGui()
    end
end

local function teleportToGarden()
    -- ‚úÖ ENHANCED: Check if already in Garden before attempting teleport
    if currentLocation == "Garden" then
        print("‚ÑπÔ∏è Already in Garden - skipping teleport")
        returnButton.Text = "Already in Garden"
        returnButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
        task.wait(1.5)
        updateGui()
        return
    end
    
    if joinInProgress then
        print("‚è≥ Teleport already in progress")
        return
    end
    
    if not mainWorldRemote then
        warn("‚ùå Garden remote not found!")
        return
    end
    
    joinInProgress = true
    returnButton.Text = "Returning to Garden..."
    returnButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
    
    local success, err = pcall(function()
        mainWorldRemote:FireServer()
    end)
    
    if success then
        print("‚úÖ Teleport request sent to Garden!")
        print("üîÑ Server will restart - script will reload automatically")
    else
        warn("‚ùå Teleport error:", err)
        task.wait(2)
        joinInProgress = false
        updateGui()
    end
end

-- BUTTON EVENTS
teleportButton.MouseButton1Click:Connect(function()
    print("üñ±Ô∏è Plaza button clicked")
    teleportToPlaza()
end)

returnButton.MouseButton1Click:Connect(function()
    print("üñ±Ô∏è Garden button clicked")
    teleportToGarden()
end)

closeButton.MouseButton1Click:Connect(function()
    screenGui.Enabled = false
    print("GUI closed")
end)

-- BACKPACK MONITORING
if backpack then
    backpack.ChildAdded:Connect(function(child)
        updateGui()
    end)
    
    backpack.ChildRemoved:Connect(function(child)
        updateGui()
    end)
end

-- CHARACTER RESPAWN
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    backpack = player:WaitForChild("Backpack")
    task.wait(2)
    updateLocation()
    print("üîÑ Character respawned - Location:", currentLocation)
    updateGui()
end)

-- ‚úÖ NEW: Continuous location monitoring
task.spawn(function()
    while true do
        task.wait(3) -- Check location every 3 seconds
        updateLocation()
    end
end)

-- INITIAL SETUP
task.wait(2) -- Wait for world to fully load
currentLocation = detectCurrentLocation()
print("üéÆ Initial location detected:", currentLocation)
print("üì¶ Initial inventory:", getInventoryCount())
updateGui()

-- MAIN AUTO-TELEPORT LOOP
task.spawn(function()
    while AUTO_TELEPORT do
        task.wait(2) -- Check every 2 seconds
        
        -- ‚úÖ Update location before checking conditions
        updateLocation()
        
        local currentInventory = getInventoryCount()
        
        print("‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ")
        print("üìä AUTO-CHECK")
        print("   Location:", currentLocation)
        print("   Inventory:", currentInventory .. "/" .. MAX_INVENTORY_SIZE)
        print("   hasAutoTeleportedToPlaza:", hasAutoTeleportedToPlaza)
        print("   hasAutoTeleportedFromPlaza:", hasAutoTeleportedFromPlaza)
        print("‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ")
        
        -- ‚úÖ RULE 1: If in Garden and inventory is FULL ‚Üí Go to Plaza (ONLY ONCE)
        -- Will NOT trigger if currentLocation == "Plaza"
        if currentLocation == "Garden" and currentInventory >= MAX_INVENTORY_SIZE and not hasAutoTeleportedToPlaza then
            print("üö® TRIGGER: Inventory FULL in Garden ‚Üí Going to Plaza (ONE TIME)")
            hasAutoTeleportedToPlaza = true
            teleportToPlaza()
        elseif currentLocation == "Garden" and currentInventory >= MAX_INVENTORY_SIZE and hasAutoTeleportedToPlaza then
            print("‚èπÔ∏è Auto-teleport to Plaza already used. Manual teleport only.")
        elseif currentLocation == "Plaza" and currentInventory >= MAX_INVENTORY_SIZE then
            print("‚úÖ Already in Plaza - no need to teleport")
        end
        
        -- ‚úÖ RULE 2: If in Plaza and inventory is ‚â§ RETURN_THRESHOLD ‚Üí Return to Garden (ONLY ONCE)
        -- Will NOT trigger if currentLocation == "Garden"
        if currentLocation == "Plaza" and currentInventory <= RETURN_THRESHOLD and not hasAutoTeleportedFromPlaza then
            print("üå± TRIGGER: Inventory ‚â§" .. RETURN_THRESHOLD .. " in Plaza ‚Üí Returning to Garden (ONE TIME)")
            hasAutoTeleportedFromPlaza = true
            teleportToGarden()
        elseif currentLocation == "Plaza" and currentInventory <= RETURN_THRESHOLD and hasAutoTeleportedFromPlaza then
            print("‚èπÔ∏è Auto-teleport from Plaza already used. Manual teleport only.")
        elseif currentLocation == "Garden" and currentInventory <= RETURN_THRESHOLD then
            print("‚úÖ Already in Garden - no need to teleport")
        end
        
        updateGui()
    end
end)

print("=== ‚úÖ AUTO INVENTORY TELEPORT LOADED ===")
print("üìç Current Location:", currentLocation)
print("‚öôÔ∏è Auto-teleport: ENABLED")
print("üì¶ Full inventory trigger:", MAX_INVENTORY_SIZE)
print("üîô Return trigger:", RETURN_THRESHOLD)
print("üö´ Anti-duplicate teleport: ENABLED")
print("‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ")
